{
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["󰃞", "󰃟", "󰃠"],
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "brightnessctl set 5%- --min-value=5",
        "min-length": 7,
        "tooltip": true,
        "tooltip-format": "Brightness: {percent}%"
    }
}
